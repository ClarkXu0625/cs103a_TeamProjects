<body>
    <h1>This is the second chat page</h1>

    <h1>Chat with ChatGPT</h1>
    <form id="chatForm">
        <label for="inputText">Enter your message:</label>
        <input type="text" name="inputText" id="inputText" required>
        <button type="submit">Send</button>
    </form>
    <div id="response" class="response"></div>

    <script>
        const form = document.querySelector('#chatForm');
        const responseDiv = document.getElementById('response');

        form.addEventListener('submit', async (event) => {
            event.preventDefault();
            const inputText = event.target.elements.inputText.value;
            const response = await fetch('/chat2', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: new URLSearchParams({ inputText }),
            });

            const output = await response.text();
            responseDiv.textContent = output;
        });
    </script>
</body>
